{
    "rules": [
        {
            "category": "Kubernetes",
            "cfg_type": "user_created",
            "comment": "Deny nginx redis images or docker.io quay.io registries",
            "containers": [
                "containers"
            ],
            "criteria": [
                {
                    "name": "imageRegistry",
                    "op": "containsAny",
                    "path": "imageRegistry",
                    "value": "docker.io,quay.io"
                },
                {
                    "name": "image",
                    "op": "containsAny",
                    "path": "image",
                    "value": "nginx,redis"
                }
            ],
            "critical": false,
            "disable": false,
            "id": 1000,
            "rule_mode": "protect",
            "rule_type": "deny"
        }
    ]
}
